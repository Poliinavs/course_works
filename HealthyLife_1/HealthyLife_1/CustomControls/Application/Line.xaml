<UserControl x:Class="HealthyLife_1.CustomControls.Application.Line"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthyLife_1.CustomControls.Application" xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Line X1="10" Y1="10" X2="600" Y2="10" Stroke="Black" StrokeThickness="2">
        <Line.StrokeDashArray>
            <DoubleCollection>
                <!-- Устанавливаем шаблон пунктирной линии: 4 пикселя сплошной линии, затем 4 пикселя пропуска -->
                <system:Double>4</system:Double>
                <system:Double>4</system:Double>
            </DoubleCollection>
        </Line.StrokeDashArray>
    </Line>
</UserControl>
