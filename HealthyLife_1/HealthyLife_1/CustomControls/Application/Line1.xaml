<UserControl x:Class="HealthyLife_1.CustomControls.Application.Line1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthyLife_1.CustomControls.Application"
             mc:Ignorable="d" 
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="450" d:DesignWidth="800">
    <Line X1="{Binding XX1}" Y1="{Binding YY1}" X2="{Binding XX2}" Y2="{Binding YY2}" Stroke="Black" StrokeThickness="2">
        <Line.StrokeDashArray>
            <DoubleCollection>
                <!-- Устанавливаем шаблон пунктирной линии: 4 пикселя сплошной линии, затем 4 пикселя пропуска -->
                <system:Double>4</system:Double>
                <system:Double>4</system:Double>
            </DoubleCollection>
        </Line.StrokeDashArray>
    </Line>
</UserControl>
